<%= shell_helpers %>

should_update_chef() {
  case "<%= flag %>" in
    true|`chef-solo -v | cut -d " " -f 2`) return 1 ;;
    latest|*) return 0 ;;
  esac
}

if [ ! -d "/opt/chef" ] || should_update_chef ; then
  echo "-----> Installing Chef Omnibus (<%= flag %>)"
  do_download <%= url %> /tmp/install.sh
  <%= shell %> /tmp/install.sh <%= version %>
fi'
