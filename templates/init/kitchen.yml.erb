driver_plugin: <%= config[:driver_plugin] %>
driver_config:
  require_chef_omnibus: true

platforms:
  - name: ubuntu-12.04
  - name: centos-6.4

suites:
  - name: default
    run_list:
<% config[:run_list].each do |recipe| -%>
      - <%= recipe %>
<% end -%>
    attributes:
      <%= config[:cookbook_name] %>:
        config: value
